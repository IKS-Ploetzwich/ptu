<form class="{{cssClass}} ptu-item" autocomplete="off">
    <header class="sheet-header ptu-item__header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
        <input name="data.source" type="text" value="{{data.source}}" placeholder="Soruce" />
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
    </header>
    <div class="ptu-sheet__content">
        {{editor content=data.description target=data.description button=true editable=editable}}
    </div>
</form>